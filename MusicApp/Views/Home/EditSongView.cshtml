@model MusicApp.ViewModels.EditSongViewModel

<h2>Edit Song</h2>

<form asp-action="EditSong" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="ArtistName"></label>
        <input asp-for="ArtistName" />
    </div>
    <div>
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" type="date" />
    </div>
    <input type="hidden" asp-for="PlaylistItemId" />
    <button type="submit">Save</button>
</form>
