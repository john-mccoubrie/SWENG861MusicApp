@model MusicApp.ViewModels.SearchResultsViewModel

@{
    ViewData["Title"] = "Search";
}
<div id="searchResultsContainer"></div>
<h1>Search</h1>

<form id="searchForm">
    <div class="form-group">
        <label for="searchQuery">Enter Song or Artist Name:</label>
        <input type="text" class="form-control" id="searchQuery" name="searchQuery">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model.Songs != null && Model.Songs.Any())
{
    <h2>Song Results</h2>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>@song.Title by @song.Artist.Name</li>
        }
    </ul>
}

@if (Model.Artists != null && Model.Artists.Any())
{
    <h2>Artist Results</h2>
    <ul>
        @foreach (var artist in Model.Artists)
        {
            <li>@artist.Name</li>
        }
    </ul>
}

